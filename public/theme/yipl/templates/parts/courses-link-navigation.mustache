{{!
    @template theme_yipl/parts/courses-link-navigation
}}

{{!
    courses link navigation
    This includes list of courses and its single courses as lesson
}}


{{#courses_link_navigation}}

<ul class = "courses-link-navigation">
    {{#courses}}
    <li class="category-{{category_id}} {{format}} {{#current_course}}current-course{{/current_course}} {{#is_enrolled}}enrolled{{/is_enrolled}}" category-name="{{category_name}}" >
        <a href="{{course_url}}" >
            {{course_fullname}}
        </a>        
        {{#child_courses}}
        <ul class = "child-courses-navigation">
            {{#courses}}
            <li class="category-{{category_id}} {{format}} {{#current_course}}current-course{{/current_course}} {{#is_enrolled}}enrolled{{/is_enrolled}}" category-name="{{category_name}}" >
                <a href="{{course_url}}" >
                    {{course_fullname}}
                </a>
            </li>
            {{/courses}}
        </ul>
        {{/child_courses}}
    </li>
    {{/courses}}
</ul>

{{/courses_link_navigation}}
