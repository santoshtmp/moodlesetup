{{!
    @template theme_yipl/blocks/faqs
}}


<div {{#block_yipl_id}}id="block-yipl-{{block_yipl_id}}" {{/block_yipl_id}}
    class="block-yipl-testimonial">
    <div class="faqs-wrapper">
        <div class="header-container d-flex" style="justify-content: space-between;">
            <div class="title">
                <h3>
                   {{#title}}{{title}}{{/title}}
                   {{^title}} {{#str}} faq, theme_yipl {{/str}} {{/title}} 
                </h3>
            </div>
            {{> theme_yipl/parts/search-form}}
        </div>
        <div class="faqs-content-wrapper">
            {{#faq_datas}}
            <div class="faqs-item">
                <div class="title">
                    {{title}}
                </div>
                <div class="faqs-category">
                    {{#faq_category_fullname}}
                    <span>{{.}}</span>
                    {{/faq_category_fullname}}
                </div>
                <div class="content">
                    {{{content}}}
                </div>
            </div>
            {{/faq_datas}}
            {{^faq_datas}}
            <div clsss="no-data">
                {{#str}} faqs_not_available, theme_yipl {{/str}} 
            </div>
            {{/faq_datas}}
        </div>
    </div>
</div>