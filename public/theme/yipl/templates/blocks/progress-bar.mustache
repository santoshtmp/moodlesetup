{{!
    @template theme_yipl/blocks/progress-bar
}}



<div {{#block_yipl_id}}id="block-yipl-{{block_yipl_id}}" {{/block_yipl_id}}
    class="block-yipl-progress-bar">
    <div class="progress-bar-wrapper">
        {{#is_enrolled}}
        <div class="my-enrolled-course">
            <p> {{#str}} course_progress, theme_yipl {{/str}} </p>
            <p class="progress-percentage"> {{course_percentage}}% {{#str}} complete, theme_yipl {{/str}} </p>
            <div class="progress">
                <div class="progress-bar bar" data-progress="{{course_percentage}}" aria-valuemin="0"
                    aria-valuemax="100" style="width: {{course_percentage}}%;">
                </div>
            </div>
        </div>
        {{/is_enrolled}}
        {{^is_enrolled}}
        <div class="enrol-now">
            <a class="btn btn-primary btn-enrol" href="{{enrol_url}}">
                <strong>{{#str}} enrol_now, theme_yipl {{/str}}</strong>
            </a>
        </div>
        {{/is_enrolled}}
    </div>
</div>