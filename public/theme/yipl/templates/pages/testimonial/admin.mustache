{{!
    @template theme_yipl/pages/testimonial/admin
}}

<div class="admin-testimonial">
    <div class="header-container d-flex" style="justify-content: space-between;">
        <div class="title">
            <h3>
                {{#str}} testimonial, theme_yipl {{/str}} 
            </h3>
        </div>
        {{> theme_yipl/parts/search-form}}
        <div class="btn-wrapper">
            <a class="btn btn-primary" href="{{add_testimonial_url}}">
                {{#str}} add_testimonial, theme_yipl {{/str}} 
            </a>
        </div>
    </div>
    {{^yipl_testimonial}}
    <div class="alert alert-warning alert-block fade in  alert-dismissible yipl-testimonial-disable" role="alert">
        YIPL Testimonial Feature is disable. Testimonial is not availabe to view. You can enable through YIPL Setting.
        <button type="button" class="btn-close" data-dismiss="alert">
            <span aria-hidden="true">Ã—</span>
            <span class="sr-only">Dismiss this notification</span>
        </button>
    </div>
    {{/yipl_testimonial}}
    <div class="testimonial-content">
        {{{testimonial_data_table}}}
    </div>
</div>
