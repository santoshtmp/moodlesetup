{{!
    @template theme_yipl/pages/faqs/faqs
}}


<div class="faqs faqs-view">
    <div class="header-container d-flex" style="justify-content: space-between;">
        <div class="title">
            <h3>
                {{#str}} faq, theme_yipl {{/str}} 
            </h3>
        </div>
        {{> theme_yipl/pages/faqs/faq-search}}
    </div>
    <div class="faqs-content">
        {{#faq_datas}}
        <div class="faq-wrapper">
            <div class="title">
                {{title}}
            </div>
            <div class="faq-category">
                {{#faq_category_fullname}}
                <span>{{.}}</span>
                {{/faq_category_fullname}}
            </div>
            <div class="content">
                {{{content}}}
            </div>
        </div>
        {{/faq_datas}}
        {{^faq_datas}}
        <div>
            {{#str}} faqs_not_available, theme_yipl {{/str}} 
        </div>
        {{/faq_datas}}
    </div>
</div>
