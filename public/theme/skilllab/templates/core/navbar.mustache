                        </svg>
                        {{/initial_item}}
                        {{{get_content}}}
                    </a>
                </li>
            {{/has_action}}
            {{^has_action}}
                <li class="breadcrumb-item{{#is_hidden}} dimmed_text{{/is_hidden}}"><span>{{{text}}}</span></li>
            {{/has_action}}
        {{/get_items}}
    </ol>
</nav>
