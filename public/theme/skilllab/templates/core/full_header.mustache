{{!
@template core/full_header

This template renders the header.

Example context (json):
{
"contextheader": "context_header_html",
"settingsmenu": "settings_html",
"hasnavbar": false,
"navbar": "navbar_if_available",
"courseheader": "course_header_html",
"welcomemessage": "welcomemessage"
}
}}
<header id="page-header" class="header-maxwidth d-print-none">
    <div class="w-100">
        <div class="d-flex flex-wrap ">
            {{#hasnavbar}}
            <div id="page-navbar">
                {{{navbar}}}
            </div>
            {{/hasnavbar}}
            <div class="ml-auto d-flex ">
                {{{pageheadingbutton}}}
            </div>
            <div id="course-header">
                <span>{{{courseheader}}}</span>

            </div>
        </div>
        <div class="d-flex  align-items-center">
            {{^welcomemessage}}
            <div class="header-container">
                <div>
                    {{#contextheader}}
                    <div class="mr-auto">
                        {{{contextheader}}}
                    </div>
                    {{/contextheader}}
                </div>
                <div>
                    {{#add_default_course}}
                    <div class=" ">
                        <a class="btn btn-primary" id="btn-add-course"
                            href="{{{add_course_url}}}">
                            <span>
                                <svg xmlns="http://www.w3.org/2000/svg"
                                    width="16" height="16" fill="none"><path
                                        fill="#fff"
                                        d="M8.5 2.75a.75.75 0 0 0-1.5 0V7H2.75a.75.75 0 0 0 0 1.5H7v4.25a.75.75 0 1 0 1.5 0V8.5h4.25a.75.75 0 1 0 0-1.5H8.5V2.75Z" />
                                </svg>
                            </span>
                            {{{add_course_pagetype}}}
                        </a>
                    </div>
                    {{/add_default_course}}
                </div>
            </div>
            {{/welcomemessage}}
            {{> core/welcome }}
            <div class="header-actions-container ml-auto"
                data-region="header-actions-container">
                {{#headeractions}}
                <div class="header-action ml-2">{{{.}}}</div>
                {{/headeractions}}
            </div>
        </div>
    </div>
</header>
