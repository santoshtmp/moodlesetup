{{#course_create}}

<div id="courses-list-filter" class="container-fluid tertiary-navigation">
    <div class="row">
        <form action="{{action_url}}" method="post" autocomplete="off"
            accept-charset="utf-8"
            class="mform form-inline simplesearchform" id="course-filter-form">
            {{! free course search area }}
            <div class="d-flex">
                <div class="navitem form-group">
                    <div class="input-group">
                        <input type="text" id="search_input"
                            class="form-control"
                            placeholder="Search {{{course_type}}}"
                            aria-label="Search {{{course_type}}}" name="search"
                            data-region="input" autocomplete="off"
                            value="{{search_course}}">
                    </div>
                </div>
                <div class="filter-container">
                    <button type="button" class="filter-btn ">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16"
                            height="16" fill="none">
                            <path fill="#3596BB"
                                d="M6 3.333a.667.667 0 1 0 0 1.334.667.667 0 0 0 0-1.334Zm-1.887 0a2 2 0 0 1 3.774 0h4.78a.667.667 0 1 1 0 1.334h-4.78a2 2 0 0 1-3.774 0h-.78a.667.667 0 0 1 0-1.334h.78Zm5.887 4a.667.667 0 1 0 0 1.334.667.667 0 0 0 0-1.334Zm-1.887 0a2 2 0 0 1 3.774 0h.78a.667.667 0 1 1 0 1.334h-.78a2 2 0 0 1-3.774 0h-4.78a.667.667 0 0 1 0-1.334h4.78Zm-2.113 4a.667.667 0 1 0 0 1.334.667.667 0 0 0 0-1.334Zm-1.887 0a2.001 2.001 0 0 1 3.774 0h4.78a.667.667 0 0 1 0 1.334h-4.78a2 2 0 0 1-3.774 0h-.78a.667.667 0 0 1 0-1.334h.78Z" />
                        </svg>
                    </button>
                    <div class="filter-options-wrapper hide ">
                        <div class="filter-title">Filters</div>
                        {{! select course category drop down }}
                        <div class="navitem form-group">
                            <div id="course-category-filter"
                                class="urlselect text-truncate w-100">
                                <div class="category-toggle dropdown-title"><svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none" height="16px" width="12px"
                                        viewBox="0 0 16 17"><path
                                            fill="currentColor"
                                            d="m4 5.3 4 4 4-4 1.6.8L8 11.7 2.4 6.1 4 5.3Z" /></svg>
                                    Categories</div>
                                <div class="category">
                                    {{#categories}}
                                    <div class="d-flex">
                                        <input type="checkbox"
                                            id="category_{{id}}" class=" "
                                            name="categoryids[]"
                                            value="{{id}}" alt=" check box"
                                            {{category_checked}} />
                                        <label for="category_{{id}}">
                                            {{name}}</label>
                                    </div>
                                    {{/categories}}
                                </div>
                            </div>
                        </div>

                        {{! select skill level drop down }}
                        <div class="navitem form-group">
                            <div id="skill-level-filter"
                                class="urlselect text-truncate w-100">
                                <div class="skill-toggle dropdown-title"><svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none" height="16px" width="12px"
                                        viewBox="0 0 16 17"><path
                                            fill="currentColor"
                                            d="m4 5.3 4 4 4-4 1.6.8L8 11.7 2.4 6.1 4 5.3Z" /></svg>
                                    Skill Level</div>
                                <div class="skill-level">
                                    {{#skill_level}}
                                    <div class="d-flex ">
                                        <input type="checkbox"
                                            id="skill_level_{{value}}"
                                            value="{{value}}" name="skill[]"
                                            {{skill_checked}} />
                                        <label
                                            for="skill_level_{{value}}">{{value}}</label>
                                    </div>
                                    {{/skill_level}}
                                </div>
                            </div>
                        </div>
                        <div class="date-toggle dropdown-title">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none"
                                height="16px" width="12px"
                                viewBox="0 0 16 17"><path
                                    fill="currentColor"
                                    d="m4 5.3 4 4 4-4 1.6.8L8 11.7 2.4 6.1 4 5.3Z" /></svg>
                            Created Date
                        </div>
                        {{! choose course create date FROM and TO }}
                        <div class="date ">
                            <div class="date-container">
                                <label for="created_date_from"> From: </label>
                                <input type="date" name="created_date_from"
                                    id="created_date_from"
                                    value="{{created_date_from}}">
                            </div>
                            <div class="date-container">
                                <label for="created_date_from"> To: </label>
                                <input type="date" name="created_date_to"
                                    id="created_date_to"
                                    value="{{created_date_to}}">
                            </div>
                        </div>

                        {{! filter submit btn }}
                        <div class="filter-submit-container">
                            {{! <input type="submit" class="btn btn-primary"
                                value="Apply filters"> }}

                            <button data-filteraction="reset" type="button"
                                class="btn btn-secondary {{^Clear_filter}}skilllab_hide{{/Clear_filter}}"
                                id="filter-clear">
                                Clear filter
                            </button>
                            <button id="filter-submit" type="button"
                                class="btn btn-primary"
                                data-filteraction="apply">
                                Apply filter
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

{{/course_create}}
