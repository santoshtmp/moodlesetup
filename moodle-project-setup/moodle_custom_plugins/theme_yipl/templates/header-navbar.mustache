{{!

    @template theme_yipl/header-navbar
}}
<nav class="header-navbar navbar fixed-top navbar-light bg-white navbar-expand" aria-label="{{#str}}sitemenubar, admin{{/str}}">
    <div class="container-fluid container">
        <button class="navbar-toggler aabtn d-block d-md-none px-1 my-1 border-0" data-toggler="drawers" data-action="toggle" data-target="theme_boost-drawers-primary">
            <span class="navbar-toggler-icon"></span>
            <span class="sr-only">{{#str}}sidepanel, core{{/str}}</span>
        </button>

        <a href="{{{ config.homeurl }}}" class="navbar-brand  d-flex align-items-center m-0 me-4 p-0 aabtn">
            {{# output.get_logo_url }}
                <img src="{{output.get_logo_url}}" class="logo me-1" alt="{{sitename}}">
                {{# output.get_theme_yipl_logo_description }}
                <div class="logo-description">  
                  {{{output.get_theme_yipl_logo_description}}}
                </div>
                {{/ output.get_theme_yipl_logo_description }}
            {{/ output.get_logo_url }}
            {{^ output.get_logo_url }}
                {{{ sitename }}}
            {{/ output.get_logo_url }}
        </a>

        {{#primarymoremenu}}
            <div class="primary-navigation">
                {{> core/moremenu}}
            </div>
        {{/primarymoremenu}}

        {{#output.page_heading_menu}}
        <ul class="navbar-nav d-none d-md-flex my-1 px-1">
            <!-- page_heading_menu -->
            {{{ output.page_heading_menu }}}
        </ul>
        {{/output.page_heading_menu}}

        <div id="usernavigation" class="navbar-nav  h-100">
            {{# output.search_box }}
                {{{ output.search_box }}}
                <div class="divider border-start h-75 align-self-center mx-1"></div>
            {{/output.search_box}}
            {{#langmenu}}
                {{> theme_boost/language_menu }}
                <div class="divider border-start h-75 align-self-center mx-1"></div>
            {{/langmenu}}
            {{{ output.navbar_plugin_output }}}
            <div class="d-flex align-items-stretch usermenu-container" data-region="usermenu">
                {{#usermenu}}
                    {{> core/user_menu }}
                {{/usermenu}}
            </div>
            {{{ output.edit_switch }}}
        </div>
    </div>
</nav>

{{> theme_boost/primary-drawer-mobile }}
