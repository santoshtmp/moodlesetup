{{!
    @template theme_yipl/pages/faqs/admin
}}

<div class="admin-faqs">
    <div class="header-container d-flex" style="justify-content: space-between;">
        <div class="title">
            <h3>
                {{#str}} faq, theme_yipl {{/str}} 
            </h3>
        </div>
        
        {{> theme_yipl/parts/search-form}}

        <div class="btn-wrapper">
            <a class="btn btn-primary" href="{{add_faq_url}}">
                {{#str}} add_faq, theme_yipl {{/str}} 
            </a>
            <a class="btn btn-secondary" href="{{add_faq_category_url}}">
                {{#str}} faq_category, theme_yipl {{/str}} 
            </a>
            <a class="btn btn-primary" href="{{view_faq_url}}">
                {{#str}} view_faq, theme_yipl {{/str}} 
            </a>
        </div>
    </div>
     {{^yipl_faqs}}
    <div class="alert alert-warning alert-block fade in  alert-dismissible yipl-faqs-disable" role="alert">
        YIPL FAQs Feature is disable. FAQs is not availabe to view. You can enable through YIPL Setting.
        <button type="button" class="btn-close" data-dismiss="alert">
            <span aria-hidden="true">Ã—</span>
            <span class="sr-only">Dismiss this notification</span>
        </button>
    </div>
    {{/yipl_faqs}}
    <div class="faqs-content">
        {{{faqs_data_table}}}
    </div>
</div>
