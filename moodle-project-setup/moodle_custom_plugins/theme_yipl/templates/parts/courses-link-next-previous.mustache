{{!
    @template theme_yipl/parts/courses-link-next-previous
}}

{{! 
    course next previous buttons navigation
}}

{{#courses_link_navigation}}

    {{#next_previous}}
    <div class = "courses-link-next-previous d-flex mt-5 mb-1 ">
        <div class="prev">
            {{#prev}}
            <a id="prev-course-{{prev}}" href="{{prev_link}}" class="prev-course btn btn-primary " title="{{prev_name}} ">
                Previous lesson ({{prev_name}})
            </a>
            {{/prev}}
        </div>

        <div class="next">
            {{#next}}
            <a id="next-course-{{next}}" href="{{next_link}}" class="next-course btn btn-primary" title="{{next_name}}">
                Next lesson ({{next_name}})
            </a>
            {{/next}}
        </div>

    </div>
    {{/next_previous}}

{{/courses_link_navigation}}
