{{!
    @template theme_yipl/parts/course-card

    @variables:
        id
        categoryid
        datatype
        shortname
        fullname
        category_name
        course_link
        course_category_link
        enrollment_link
        thumbnail_image_link
        summary
        enrollment_methods_info

    This is used in /course and /homepage courses card section
}}
{{#datatype}}
<div class="yipl-course-card course-card " data-courseid="{{id}}" data-type="{{datatype}}">
{{/datatype}}
    <div class="card-head">
        <a class="category-link" id="category-{{categoryid}}" href="{{course_category_link}}">
            <h4 class="course-category-name">{{category_name}}</h4>
        </a>
         <a class="course-card-thumbnail" href="{{course_link}}">            
            <img src="{{thumbnail_image_link}}" class="card-img-top w-100" alt="{{fullname}} image ">
        </a>
    </div>
    <div class="card-body">
        <h4 class="card-title">
            <a class="course-name" href="{{course_link}}">
                {{fullname}}
            </a>
        </h4>
        {{#summary}}
        <div class="summary">
            <div class="no-overflow summary-truncate">
                {{{summary}}}
            </div>
        </div>
        {{/summary}}
    </div>
    <div class="card-footer">
        <a class="view-card-link" href="{{course_link}}">
            {{#str}} view_course, theme_yipl {{/str}}
     
            <img src="{{{ output.wwwpath}}}/theme/yipl/pix/icons/blue-arrow-right.svg" alt="view-course-arrow-right">
        </a>
    </div>
{{#datatype}}
</div>
{{/datatype}}
