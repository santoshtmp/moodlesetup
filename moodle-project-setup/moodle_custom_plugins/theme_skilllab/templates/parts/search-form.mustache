{{!
    @template theme_skilllab/parts/search-form
}} 
{{#search_form}}
<div class="simplesearchform search-form-wrapper">
    <form autocomplete="off" action="{{ action }}" method="POST" accept-charset="utf-8" class="mform d-flex align-items-center ">
    {{#hidden_values}}
        <input type="hidden" name="{{name}}" id="hidden_{{name}}" value="{{value}}">
    {{/hidden_values}}
    {{#select_options}}
    <select {{#attributes}}{{name}}="{{value}}"{{/attributes}} {{#select_name}}name="{{select_name}}"{{/select_name}} {{^select_name}}name="select"{{/select_name}} id="{{id}}" class="custom-select {{classes}}" 
            {{#title}}title="{{.}}"{{/title}} {{#disabled}}disabled{{/disabled}}>
        {{#options}}
            {{#isgroup}}
                <optgroup label="{{name}}">
                    {{#options}}
                        <option value="{{value}}" {{#selected}}selected{{/selected}} {{#disabled}}disabled{{/disabled}}>{{{name}}}</option>
                    {{/options}}
                </optgroup>
            {{/isgroup}}
            {{^isgroup}}
                <option value="{{value}}" {{#selected}}selected{{/selected}} {{#disabled}}disabled{{/disabled}}>{{{name}}}</option>
            {{/isgroup}}
        {{/options}}
    </select>
    {{/select_options}}
    {{#search}}
    <div class="input-group">
        <label for="searchinput-{{uniqid}}">
            <span class="sr-only">{{{ searchstring }}}</span>
        </label>
        <input type="text"
           id="searchinput-{{uniqid}}"
           class="form-control"
           placeholder="{{ searchstring }}"
           aria-label="{{ searchstring }}"
           name="{{ inputname }}"
           data-region="input"
           autocomplete="off"
           value="{{ query }}"
        >
        <div class="input-group-append">
            <button type="submit"
                class="btn {{^btnclass}}btn-submit{{/btnclass}} {{ btnclass }} search-icon"
                {{#buttonattributes}}{{ key }}="{{ value }}" {{/buttonattributes}}
            >
                {{#pix}} a/search, core {{/pix}}
                <span class="sr-only">{{ searchstring }}</span>
            </button>
        </div>
    </div>
    {{/search}}
    </form>
</div>
{{/search_form}}